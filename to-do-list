# Define an empty list to store tasks
tasks = []

# Function to add a task to the list
def add_task(task):
    tasks.append(task)
    print("Task added successfully.")

# Function to remove a task from the list
def remove_task(task):
    if task in tasks:
        tasks.remove(task)
        print("Task removed successfully.")
    else:
        print("Task not found.")

# Function to print all tasks in the list
def print_tasks():
    print("Your To-Do List:")
    for task in tasks:
        print("- " + task)

# Main program loop
while True:
    # Print menu
    print("\nMenu:")
    print("1. Add task")
    print("2. Remove task")
    print("3. View tasks")
    print("4. Quit")

    # Get user choice
    choice = input("Enter your choice: ")

    # Process user choice
    if choice == "1":
        task = input("Enter task: ")
        add_task(task)
    elif choice == "2":
        task = input("Enter task: ")
        remove_task(task)
    elif choice == "3":
        print_tasks()
    elif choice == "4":
        break
    else:
        print("Invalid choice.")
